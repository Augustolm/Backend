
<h1 class="titulo">Lista de productos</h1>
<div class="empresa">
    Nombre de la Empresa
    <button class="carrito">Carrito</button>
  </div>
  <div class="linea"></div>
<div class="menu">
  <div>
    <samp style="margin-right: 20px;">Categoria:</samp>
    <select name="categoria" class="custom-select">
      <option value="0">Todo</option>
      {{#if context.categorias}}
        {{#each context.categorias}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      {{/if}}
    </select>
  </div>
  <div>
    <samp style="margin-right: 20px;">Orden:</samp>
    <select name="orden" class="custom-select">
      <option value="0">Ordenar</option>
      <option value="1">Ascendente</option>
      <option value="-1">Descendente</option>
    </select>
  </div>
  <div class="pagination">
    <samp style="margin-right: 20px;">Pagination:</samp>
    <select name="paginacion"{{#if (eq context.pagination.totalPage 1)}} disabled{{/if}} class="custom-select">
      {{#each context.totalPages}}
        {{#if (eq this context.pagination.page)}}
          <option value="{{this}}" selected>{{this}}</option>
        {{else}}
          <option value="{{this}}">{{this}}</option>
        {{/if}}
      {{/each}}
    </select>
  </div>
</div>




<div class="productos">
  <div id="product" class="listaProductos">
    {{#if context.existe}}
      <div class="tarjetas">
        {{#each context.informacionProducto}}
          <div class="tarjeta">
            <img class="img-small" src={{this.thumbnail}} alt="img">
            <h3>{{this.title}}</h3>
            <p>{{this.description}}</p>
            <p>Precio: {{this.price}}</p>
            <p>Estado: {{this.status}}</p>
            <p>Categoría: {{this.category}}</p>
            <p>Código: {{this.code}}</p>
            <p>Stock: {{this.stock}}</p>
            <button class="comprar-btn" data-product-id="{{this._id}}">Comprar</button>
          </div>
        {{/each}}
      </div>
    {{else}}
      <h1>No existen datos</h1>
    {{/if}}
  </div>
</div>


