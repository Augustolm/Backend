<h1 class="titulo">Lista de productos</h1>
  <div class="empresa">
    Nombre de la Empresa
    <button class="carrito">Carrito</button>
  </div>
  <div class="linea"></div>
  <div class="menu">
    <select name="categoria">
      <option value="categoria1">Categoría 1</option>
      <option value="categoria2">Categoría 2</option>
      <option value="categoria3">Categoría 3</option>
    </select>
    <select name="orden">
      <option value="orden1">Orden 1</option>
      <option value="orden2">Orden 2</option>
      <option value="orden3">Orden 3</option>
    </select>
    <select name="pendiente">
      <option value="pendiente1">Pendiente 1</option>
      <option value="pendiente2">Pendiente 2</option>
      <option value="pendiente3">Pendiente 3</option>
    </select>
  </div>
  <div class="productos">
    <div id="product" class="listaProductos">
      {{#if existe}}
        <table>
          <thead>
            <th>Id</th>
            <th>Nombre del producto</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Categoría</th>
            <th>Código</th>
            <th>Stock</th>
            <th>URL</th>
          </thead>
          <tbody>
            {{#each informacionProducto}}
              <tr>
                <td>{{this._id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.status}}</td>
                <td>{{this.category}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td><img class="img-small" src={{this.thumbnail}} alt="img"></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{else}}
        <h1>No existen datos</h1>
      {{/if}}
    </div>
  </div>