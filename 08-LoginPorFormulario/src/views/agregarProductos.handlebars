<div class="container">
  <h1>Agregar Productos</h1>

  <div class="formularioProducto">
    <form onsubmit="">
      <input
        type="text"
        class="form-control"
        id="title"
        placeholder="Nombre del Producto"
        required
      />
      <input
        type="text"
        class="form-control"
        id="description"
        placeholder="Descripción"
        required
      />
      <input
        type="text"
        class="form-control"
        id="status"
        placeholder="Estado"
        required
      />
      <input
        type="text"
        class="form-control"
        id="category"
        placeholder="Categoría"
        required
      />
      <input
        type="text"
        class="form-control"
        id="code"
        placeholder="Código"
        required
      />
      <input
        type="number"
        class="form-control"
        id="stock"
        placeholder="Stock"
        required
      />
      <input
        type="text"
        class="form-control"
        id="thumbnail"
        placeholder="URL"
        required
      />
      <input
        type="number"
        class="form-control"
        aria-label="Amount (to the nearest dollar)"
        id="price"
        placeholder="Precio"
        required
      />
      <button type="submit" class="btn btn-primary" id="boton1">Cargar Producto</button>
    </form>
  </div>

  <div class="boton-footer">
    <a href="/" class="btn btn-primary">Tienda</a>
  </div>
</div>

<script src="js/agregarProductos.js"> </script>