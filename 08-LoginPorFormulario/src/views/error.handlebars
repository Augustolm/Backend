<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">¡Error!</h4>
        {{#if errorMessage}}
          <p>{{errorMessage}}</p>
        {{else}}
          <p>Ocurrió un error.</p>
        {{/if}}
        <a href="/" class="btn btn-primary mt-3">Regresar</a>
      </div>
    </div>
  </div>
</div>