<div class="container custom-container" style="position: relative; z-index: 1;">
  <h1>Carrito</h1>
  <div class="container" style="position: relative; z-index: 1;">
    <div
      id="notification-container"
      class="position-fixed bottom-0 end-0 p-3"
    ></div>
    <div class="row">
      <div class="col productoscard" id="productos-container">
        {{#if (isEmpty productos)}}
          <div class="empty-cart">
            <div class="card text-center">
              <div class="card-body">
                <p class="card-text">Sin productos en el carrito</p>
              </div>
            </div>
          </div>
        {{else}}
          {{#each productos}}
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Nombre del producto: {{this.title}}</h5>
                <p class="card-text">Descripción: {{this.description}}</p>
                <p class="card-price">Precio: {{this.price}} $</p>
                <button
                  class="btn btn-danger btn-sm btn-borrar"
                  data-product-id="{{this._id}}"
                >Borrar</button>
              </div>
            </div>
          {{/each}}
        {{/if}}
      </div>
    </div>

    {{#if productos.length}}
      <!-- Agregar un rectángulo blanco para mostrar el total a pagar -->
      <div class="row mt-3">
        <div class="col-md-6 offset-md-3 text-center">
          <div class="total-a-pagar bg-white p-3 rounded">
            <p class="total-label mb-1">Total a pagar:</p>
            <p class="total-amount">{{totalAPagar}} $</p>
          </div>
        </div>
      </div>
    {{/if}}

    <div class="row mt-3">
      <div class="col text-end">
        {{#if productos.length}}
          <button
            class="btn btn-success btn-sm"
            id="btn-finalizar-compra"
          >Finalizar Compra</button>
        {{/if}}
        <button class="btn btn-sm btn-primary" id="btn-regresar">
          <a href="/" class="text-white text-decoration-none">Regresar</a>
        </button>
      </div>
    </div>
  </div>

</div>

<script src="/js/carrito.js"></script>