<h1>Carrito</h1>
<div class="container">
  <div class="row">
    <div class="col productoscard" id="productos-container">
      {{#if productos.length}}
        {{#each productos}}
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Nombre del producto: {{this.title}}</h5>
              <p class="card-text">Descripción: {{this.description}}</p>
              <p class="card-price">Precio: {{this.price}} $</p>
             <button class="btn btn-danger btn-sm btn-borrar" data-product-id="{{this._id}}">Borrar</button>
            </div>
          </div>
        {{else}}
          <div class="empty-cart">
            <p>Tu carrito está vacío.</p>
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
<button class="btn btn-sm btn-primary" id="btn-regresar">
  <a href="/" class="text-white text-decoration-none">Regresar</a>
</button>

    </div>
  </div>
</div>
