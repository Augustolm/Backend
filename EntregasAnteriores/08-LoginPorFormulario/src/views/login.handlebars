<div class="container">
  <h1 class="text-center">Login</h1>
  <div class="card">
    <div class="card-body">
      <div
        id="errorDiv"
        class="alert alert-danger"
        style="display: none;"
      ></div>
      <form action="/" method="POST" id="loginForm">
        <div class="form-group">
          <label for="email">Correo Electrónico:</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          />
        </div>
        <div class="form-group">
          <label for="password">Contraseña:</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
        </div>
        <div class="text-center">
          <button type="button" class="btn btn-primary" id="loginBtn">Iniciar
            sesión</button>
          <button
            type="reset"
            class="btn btn-secondary"
            id="clearBtn"
          >Borrar</button>
          <button
            class="btn btn-danger ml-auto"
            type="button"
            id="registerBtn"
          >Registrarse</button>
        </div>
        <div id="registerForm" style="display: none;">
          <div class="form-group">
            <label for="username">Nombre:</label>
            <input
              type="text"
              class="form-control"
              id="username"
              name="username"
              required
            />
            <label for="lastname">Apellido:</label>
            <input type="text" class="form-control" id="lastname" required />
            <label for="age">Edad:</label>
            <input
              type="number"
              class="form-control"
              id="age"
              min="0"
              max="120"
              required
            />
          </div>
          <div class="text-center mt-3">
            <button
              type="button"
              class="btn btn-primary"
              id="registerSubmitBtn"
            >Registrarse</button>
            <button
              type="button"
              class="btn btn-secondary"
              id="clearRegisterBtn"
            >Borrar</button>
            <a
              href="/"
              class="btn btn-danger ml-auto"
              id="cancelBtn"
            >Cancelar</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/js/login.js"> </script>