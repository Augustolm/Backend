<h1>Carrito</h1>
<div class="container" style="position: relative; z-index: 1;">
  <div
    id="notification-container"
    class="position-fixed bottom-0 end-0 p-3"
  ></div>
  <div class="row">
    <div class="col productoscard" id="productos-container">
      {{#if (isEmpty productos)}}
        <div class="empty-cart">
          <div class="card text-center">
            <div class="card-body">
              <p class="card-text">Sin productos en el carrito</p>
            </div>
          </div>
        </div>
      {{else}}
        {{#each productos}}
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Nombre del producto: {{this.title}}</h5>
              <p class="card-text">Descripci√≥n: {{this.description}}</p>
              <p class="card-price">Precio: {{this.price}} $</p>
              <button
                class="btn btn-danger btn-sm btn-borrar"
                data-product-id="{{this._id}}"
              >Borrar</button>
            </div>
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <button class="btn btn-sm btn-primary" id="btn-regresar">
        <a href="/" class="text-white text-decoration-none">Regresar</a>
      </button>
    </div>
  </div>
</div>
<script src="/js/carrito.js"></script>